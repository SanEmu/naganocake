<h3>注文履歴一覧</h3>
<table class="table">
    <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order)  %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_items.count %></td>
        <td></td>
    </tr>
    <% end %>
</table>