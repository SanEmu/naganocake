<h1>商品新規登録画面</h1>

<%= form_for(@item, url: admin_items_path) do |f| %>
  <% if @item.errors.any? %>
      <h2><%= @item.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @post_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>

  <%= f.attachment_field :item_image %>
  <%= f.label :商品名 %><br>
  <%= f.text_field :name %><br>
  <%= f.label :商品説明 %><br>
  <%= f.text_area :description %><br>
  <%= f.label :ジャンル %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <%= f.label :税抜価格 %><br>
  <%= f.text_field :price %><br>
  <%= f.label :販売ステータス %><br>
  <%= f.select :is_selling, [["有効", true], ["無効", false]], include_blank: "選択して下さい" %><br>
  <%= f.submit "新規登録" ,class: 'btn btn-primary'%>
<% end %>