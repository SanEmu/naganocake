<!--admin/items#edit-->
<h3>商品編集</h3>
<%= form_for @item,:url => {:action => :update} do |f| %>
<%= f.attachment_field :item_image %>
  <%= f.label :商品名 %><br>
  <%= f.text_field :name %><br>
  <%= f.label :商品説明 %><br>
  <%= f.text_area :description %><br>
  <%= f.label :ジャンル %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <%= f.label :税抜価格 %><br>
  <%= f.text_field :price %><br>
  <%= f.label :販売ステータス %><br>
  <%= f.select :is_selling, [["販売中", true], ["準備中", false]], include_blank: "選択して下さい" %><br>
  <%= f.submit "編集する", class: 'btn btn-primary' %>
<% end %>